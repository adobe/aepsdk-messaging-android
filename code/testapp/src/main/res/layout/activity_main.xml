<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5C5CA"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messaging Sample App" />

    <Button
        android:id="@+id/btnGetLocalNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Local Notification" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="iam trigger word" />

    <Button
        android:id="@+id/btnTriggerFullscreenIAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger IAM" />

    <Switch
        android:id="@+id/allowIAMSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Allow IAM" />

    <Button
        android:id="@+id/btnTriggerLastIAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger Most Recent IAM" />

    <Button
        android:id="@+id/btnRefreshInAppMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="refresh in app messages" />

    <Button
        android:id="@+id/btnCheckFeedMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Feed Messages" />

    <Button
        android:id="@+id/btnCheckCodeBased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Code Based Experiences" />

    <Button
        android:id="@+id/btn_detailpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Activity " />

</androidx.appcompat.widget.LinearLayoutCompat>